<div class="container my-4">
    <div class="row">
        <h3 class="mx-auto">Genres</h3>
    </div>
    <div class="row justify-content-center align-items-center">
        {{#each items}}
        <div class="card m-1" style="width: 18rem;" id={{genreId}}>
            <div class="card-body text-center">
                <p class="card-text">
                    <strong>{{genreName}}</strong> <P></P>
                </p>
                <button class="btn btn-sm btn-outline-dark">Songs</button> &nbsp;
                <button class="btn btn-sm btn-outline-dark">Artists</button> &nbsp;
                <button class="btn btn-sm btn-outline-dark">Albums</button> &nbsp;
            </div>
        </div>
        {{/each}}
    </div>
</div>