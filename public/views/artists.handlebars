<div class="container my-4">
    <div class="row">
        <h1 class="mx-auto">{{header}}</h1>
    </div>
    <div class="row justify-content-center align-items-center">
        {{#each items}}
        <div class="card m-1" style="width: 18rem;" id={{id}}>
            <div class="card-body text-center">
                <p class="card-text">
                    <strong>{{name}}</strong> <BR>
                    {{#if genre}} {{genre}} <BR> {{/if}}
                    {{#if location}}
                </p>
                <hr>
                <p class="card-text">
                    <em>"{{description}}"</em> <BR>
                    <small>Popular in {{location}}</small>{{/if}}
                </p>
                <a href="http://flip2.engr.oregonstate.edu:3306/music/songs-artist/{{id}}" class="btn btn-sm btn-outline-dark">Songs</a>
            </div>
        </div>
        {{/each}}
    </div>
    <HR>
    {{#if formAddress}}
    <div class="row my-3">
        <h3 class="mx-auto">{{formHeader}}</h3>
    </div>
    <div class="row">
        <div class="mx-auto">
            <form method="POST" action={{formAddress}}>
                {{#if artists}}
                <select name="artistName" required>
                    <option>--Choose Artist--</option>
                    {{#each artists}}
                    <option value={{id}}>{{name}}</option>
                    {{/each}}
                </select>
                <select name="genreName" required>
                    <option>--Choose Genre--</option>
                    {{#each genres}}
                    <option value={{genreId}}>{{genreName}}</option>
                    {{/each}}
                </select>
                {{else}}
                <input type="text" name="artistName" placeholder="Artist Name" required>
                {{/if}}
                <input class="btn btn-info btn-sm" type="submit" value="Add">
            </form>
        </div>
    </div>
    {{/if}}
</div>